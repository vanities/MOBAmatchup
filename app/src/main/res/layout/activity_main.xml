<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#48fdff"
    android:id="@+id/required">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/champSearchEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:hint="@string/searchTextHint"
        android:paddingLeft="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/search_go"
        android:id="@+id/button"
        android:layout_alignParentEnd="true"
        android:elegantTextHeight="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fillBox"
        android:layout_above="@+id/secondaryView"
        android:layout_alignEnd="@+id/primaryView"
        android:layout_alignLeft="@+id/primaryRoleTxt"
        android:layout_alignRight="@+id/primaryView"
        android:layout_alignTop="@+id/primaryRoleTxt"
        android:layout_alignBottom="@+id/primaryView"
        android:background="#ff5769" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Primary"
        android:id="@+id/primaryRoleTxt"
        android:background="#ff5769"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/primaryView"
        android:password="false"
        android:background="#ff5769"
        android:layout_alignTop="@+id/primaryRoleTxt"
        android:layout_toEndOf="@+id/primaryRoleTxt"
        android:layout_alignRight="@+id/button"
        android:layout_alignLeft="@+id/secondaryView"
        android:paddingLeft="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/champSearchEditText"
        android:layout_alignParentStart="true"
        android:src="@drawable/anniesquare"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Secondary"
        android:id="@+id/textView2"
        android:layout_below="@+id/primaryView"
        android:layout_alignStart="@+id/primaryRoleTxt"
        android:layout_marginTop="12dp"
        android:background="#bfff9f"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/secondaryView"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/button"
        android:background="#bfff9f"
        android:paddingLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Counter-Picks"
        android:id="@+id/counterView"
        android:background="#38ff50"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="30dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Champ1, Champ2, Champ3"
        android:id="@+id/counterList"
        android:layout_below="@+id/counterView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingTop="0dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Laning Info"
        android:id="@+id/textView7"
        android:textSize="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/counterList"
        android:layout_alignStart="@+id/counterView"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lots of text here"
        android:id="@+id/laneView"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignRight="@+id/secondaryView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tap to access champion wiki"
        android:id="@+id/tapTextView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#a2a2a2"
        android:textColor="#010101"
        android:padding="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/champNameText"
        android:layout_above="@+id/primaryRoleTxt"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linkButton"
        android:layout_toStartOf="@+id/button"
        android:layout_alignTop="@+id/tapTextView"
        android:layout_alignLeft="@+id/tapTextView"
        android:layout_alignBottom="@+id/tapTextView"
        android:layout_alignRight="@+id/tapTextView"
        android:background="#00ffffff" />

</RelativeLayout>
